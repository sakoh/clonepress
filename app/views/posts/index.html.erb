<h1>Listing posts</h1>

<div class="posts">
  <% @posts.each do |post| %>
       <h3><%= link_to post.title, post %></h3>
       
       <div class="content">
           <%= simple_format post.body %>
       </div>

       <div class="actions">
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
       </div>
  <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>